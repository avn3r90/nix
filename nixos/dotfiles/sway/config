##############################
#  WYGLĄD I OGÓLNE USTAWIENIA
##############################

# Czcionka (dla niektórych aplikacji sway)
#font pango: Dejavu Sans Mono 1

# Odstępy między oknami
gaps inner 5px
gaps outer 5px

# Obramowania okien
default_border pixel 3
set $border_focused   #03d3fc
set $border_unfocused #636e72
set $focused_background   #eff0f1
set $unfocused_background #bdc3c7

##############################
#  USTAWIENIA WEJŚCIA (INPUT)
##############################

# Mysz
input "type:pointer" {
    accel_profile flat
}

# Touchpad
input "2:14:ETPS/2_Elantech_Touchpad" {
    dwt enabled
    tap enabled
    middle_emulation enabled
}

# Układ klawiatury
input * {
    xkb_layout "pl, us"
}


##############################
#  ZMIENNE I PROGRAMY
##############################

set $mod Mod4
set $term kitty 
set $browser chromium-browser
#set $menu fuzzel -b 434c5eff -t d8dee9ff -s 2e3440ff -S 8fbcbbff -C 88c0d0ff -m b48eadff -w 60 --show-actions -f "JetBrains Mono:weight=thin:size=14" --icon-theme=Qogir
set $menu wofi --show drun -I

##############################
#  EKRANY I TAPETY
##############################

# Pozycjonowanie ekranów
output HDMI-A-2 pos 0 0 res 2560x1440
output HDMI-A-1 pos 2560 0 res 2560x1440

# Tapeta na jeden ekran
#output * bg /home/fi9o/Obrazy/gentoo.png fill

# Tapeta per ekran
output HDMI-A-2 bg ~/Obrazy/nix-l.jpg fill
output HDMI-A-1 bg ~/Obrazy/nix-p.jpg fill

# Przypisanie workspace do ekranów
workspace 2 output HDMI-A-1   # prawy ekran
workspace 1 output HDMI-A-2   # lewy ekran


##############################
#  SKRÓTY KLAWISZOWE
##############################

### Podstawowe

# Terminal
bindsym $mod+Return exec $term

# Menu aplikacji
bindsym $mod+d exec $menu

# Zabij okno
bindsym $mod+Shift+c kill

# Przeładowanie konfiguracji
bindsym $mod+Shift+r reload

# Wylogowanie z potwierdzeniem
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit sway?' -B 'Yes' 'swaymsg exit'

# Aplikacje
bindsym $mod+f exec librewolf
bindsym $mod+y exec thunderbird
bindsym $mod+t exec signal-desktop
bindsym $mod+g exec pcmanfm


### Poruszanie się między oknami
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right


# Przesuwanie okien LPM, zmiana rozmiaru PPM w trybie floating
floating_modifier $mod normal

### Przełączanie workspace

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Przenoszenie okien na inne workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10


### Układy okien i tryby

bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent


### Scratchpad

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show


### Tryb zmiany rozmiaru okien

mode "resize" {
    bindsym Left  resize shrink width 10px
    bindsym Right resize grow   width 10px
    bindsym Up    resize shrink height 10px
    bindsym Down  resize grow   height 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


##############################
#  ZARZĄDZANIE ZASILANIEM
##############################

# Swayidle – usypianie ekranu
exec swayidle -w \
  timeout 900 'swaymsg "output * power off"' \
  resume 'swaymsg "output * power on"'

# Przyciski jasności
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp   exec brightnessctl set 5%+


##############################
#  SWAYLOCK
##############################

bindsym $mod+l exec swaylock --ignore-empty-password --show-failed-attempts --color 1e1e1e


##############################
#  STATUS BAR
##############################

bar {
    swaybar_command waybar
}

# Wczytaj dodatkowe configi z /etc
include /etc/sway/config.d/*


##############################
#  REGLY OKIEN / SPECJALNE
##############################

# Pavucontrol jako okno pływające
for_window [app_id="pavucontrol"] floating enable, move position 1860 0

# Automatyczne przypisania okien
assign [app_id="chromium-bin"] workspace number 1
assign [app_id="kitty"]     workspace number 2


##############################
#  AUTOSTART 
##############################

exec mako
#exec nm-applet
exec blueman-applet
#exec pavucontrol
#exec gentoo-pipewire-launcher
