{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 32, // Waybar height
    // "width": 120, // Waybar width
    // Choose the order of the modules
    "modules-left": ["sway/workspaces", "sway/mode"], // wywalam custom/media bo nie kompilowalem z pulseaudio
    // "modules-center": ["sway/window"],
    "modules-right": ["tray", "network", "cpu", "memory", "custom/disk_root", "custom/disk_home", "backlight", "battery", "clock"], // po tray bylo pulseaudio
    // Modules configuration
     "sway/workspaces": {
         "disable-scroll": true,
         "disable-markup" : false,
         "all-outputs": true,
         "format": "  {icon}  ",
